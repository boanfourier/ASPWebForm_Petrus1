@model IEnumerable<MyWebFormApp.BLL.DTOs.ArticleDTO>
<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add Article</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Add Article</h6>
            </div>
            <div class="card-body">
                <form method="post" action="/Article/Create">
                    <div class="form-group">
                        <label for="ArticleID">Article ID :</label>
                        <input type="text" class="form-control" name="ArticleID" placeholder="Insert Article ID" />
                    </div>
                    <div class="form-group">
                        <label for="ArticleName">Article Name :</label>
                        <input type="text" class="form-control" name="ArticleName"
                               placeholder="Insert Article Name" />
                    </div>

                    <input type="Submit" value="Create" class="btn btn-success btn-sm" />

                </form>
            </div>
        </div>

    </div>

</div>
