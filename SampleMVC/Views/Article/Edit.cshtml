


<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Category</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit Article</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])
                <form asp-action="Edit">
                    <div class="form-group">
                        <label for="ArticleID">Article ID :</label>
                        <input type="text" class="form-control" id="ArticleID" name="ArticleID" value="@Model.ArticleID"readonly/>
                    </div>
                    <div class="form-group">
                        <label for="CategoryID">Category ID :</label>
                        <input type="text" class="form-control" id="CategoryID" name="CategoryID" value="@Model.CategoryID" readonly />
                    </div>
                    <div class="form-group">
                        <label for="Title">Article Name :</label>
                        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" />
                    </div>
                    <div class="form-group">
                        <label for="Details">Detail Article:</label>
                        <input type="text" class="form-control" id="Details" name="Details" value="@Model.Details" />
                    </div>
                    <div class="form-group">
                        <label for="IsApproved">Approve :</label>
                        <input type="checkbox" id="IsApproved" name="IsApproved" value="true" />
                    </div>
                    <div class="form-group">
                        <label for="Pic">Upload Picture :</label>
                        <input class="form-control" type="file" id="formFile" name="ImageArticle">
                    </div>
                    <div class="form-group">
                        <input type="Submit" class="btn btn-success btn-sm" value="Edit" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>